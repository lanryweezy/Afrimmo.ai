# Production Deployment Configuration

## Environment Setup
NODE_ENV=production
REACT_APP_API_BASE_URL=https://api.afrimmo.ai
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_LOG_LEVEL=warn

## Build Optimizations
# Minify JavaScript and CSS
MINIFY_JS=true
MINIFY_CSS=true

# Enable gzip compression
ENABLE_GZIP=true

# Asset optimization
IMAGE_OPTIMIZATION=true
FONT_OPTIMIZATION=true

## Security Headers
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains; preload
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:;
X_CONTENT_TYPE_OPTIONS=nosniff
X_FRAME_OPTIONS=DENY
X_XSS_PROTECTION=1; mode=block

## Performance Settings
# Cache headers for static assets
STATIC_ASSETS_CACHE_DURATION=31536000 # 1 year
INDEX_HTML_CACHE_DURATION=0 # No cache for index.html to pick up new versions immediately

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.afrimmo.ai

## Monitoring
ERROR_REPORTING=true
ERROR_REPORTING_SERVICE=SENTRY
LOGGING_LEVEL=warn
ANALYTICS_TRACKING_ID=G-XXXXXXXXXX

## API Limits
RATE_LIMIT_GLOBAL=1000 # requests per hour per IP
RATE_LIMIT_AUTHENTICATED=2000 # requests per hour per authenticated user
MAX_FILE_UPLOAD_SIZE=5242880 # 5MB in bytes

## Feature Flags
FEATURE_NEW_UI=true
FEATURE_AI_ENHANCEMENTS=true
FEATURE_ADVANCED_ANALYTICS=true